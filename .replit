modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npx vite preview --host 0.0.0.0 --port 5000"]
build = ["sh", "-c", "npm run build"]

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Deploy to GitHub Pages"
author = 45562255
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git add dist -f"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git commit -m \"Deploy to GitHub Pages: $(date)\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git subtree push --prefix dist origin gh-pages"

[[workflows.workflow]]
name = "Dev Server"
author = 45562255
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 8080
externalPort = 80
